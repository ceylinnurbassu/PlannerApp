<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true"?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🎨 Temel renk paleti -->
    <Color x:Key="Primary">#4C6EF5</Color>
    <Color x:Key="PrimaryDark">#364FC7</Color>
    <Color x:Key="PrimaryLight">#A5B8FF</Color>
    <Color x:Key="PrimaryText">#1E1E2E</Color>
    <Color x:Key="BackgroundLight">#F9FAFB</Color>

    <!-- ⚙️ Gri tonları -->
    <Color x:Key="Gray100">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- 🌈 Fırçalar -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundLight}" />

</ResourceDictionary>
