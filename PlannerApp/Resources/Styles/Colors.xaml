<?xml version="1.0" encoding="UTF-8"?>
<?xaml-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#E5D0FA</Color>
    <Color x:Key="PrimaryDark">#FF87030C</Color>
    <Color x:Key="PrimaryLight">#F2E8FD</Color>
    <Color x:Key="PrimaryText">#222222</Color>
    <Color x:Key="BackgroundLight">#FAF9FC</Color>

    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray300">#E5E7EB</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray900">#1F2937</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF87030C" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundLight}" />
</ResourceDictionary>
